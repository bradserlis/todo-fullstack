<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>To-Do FULL STACK!</title>
<!-- stylesheet -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
<link rel="stylesheet" href="/styles/main.css">

<!-- script -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
</head>


<body>

<div class='container'>
<h1> To Do List </h1>
  <form method="POST" action="/" class="form-inline" id='newToDo'>
    <div class="form-group">
        <label for="title">Task</label>
        <input type="text" class="form-control" name="task" placeholder="Task...">
    </div>
    <div class="form-group">
        <label for="title">Description</label>
        <textarea type="text" class="form-control" name="description" placeholder="Description..."></textarea>
    </div>
    <button type="submit" class="btn btn-default">Add task</button>
  </form>
  <% todos.forEach(function(item){ %>
    <hr>
      <h3><%= item.task %></h3>
      <p><%= item.description %></p>
      <button type="button" name="button" class="deleteBtn btn btn-danger pull-right" data-id="<%= item._id %>">Delete</button>
    </p>
  <% }); %>
</div>


  <script src="/scripts/main.js"></script>
</body>
</html>